@model IEnumerable<NoVe.Models.Klasse>
@inject DatabaseHelper helper

@{
    ViewData["Title"] = "Zeit Setzen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Zeit Setzen</h1>

@using (Html.BeginForm("ZeitSpeichern", "Lehrer"))
{
    @if (@Model.Count() != 0)
    {
        @foreach (var klasse in Model)
        {
            <label class="form-login-label" name="startdatum">Start Datuum</label>
            <input class="form-login" type="datetime" name="startdatum" id="startdatum" value="@klasse.Startdatum" />

            <label class="form-login-label" name="enddatum">Gewichtung</label>
            <input class="form-login" type="datetime" name="enddatum" id="enddatum" value="@klasse.EndDatum" />

        }
        <input class="login-submit" type="submit" name="submit" value="Speichern" />
        <a class="nav-link login-button login-submit" asp-area="" asp-controller="Lehrer" asp-action="KlasseBack">Zurück</a>

    }
}
