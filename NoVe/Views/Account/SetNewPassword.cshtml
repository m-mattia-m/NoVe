@{
    ViewData["Title"] = "Passwort neu setzen";
}
@if (ViewBag.Message != null)
{
    <p>@Html.Raw(ViewBag.Message)</p>
}
<div class="text-center">
    <h1 class="display-4">Login</h1>
    <div class="login-wrapper">
        <!-- Html.BeginForm(Method, Controller) -->
        @using (Html.BeginForm("SetNewPassword", "Account"))
        {
            <div class="login-form">
                <label class="form-login-label" name="passwort">Passwort</label>
                <input class="form-login" type="password" name="passwort" id="passwort" />

                <label class="form-login-label" name="passwortCheck">Passwort Bestätigen</label>
                <input class="form-login" type="password" name="passwortCheck" id="passwortCheck" />

                <div class="login-buttons">
                    <input class="login-submit" type="submit" name="submit" value="Passwort Zurücksetzen" />
                </div>

            </div>

        }
    </div>
</div>
