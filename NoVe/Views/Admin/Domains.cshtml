@model IEnumerable<NoVe.Models.Domains>
@inject DatabaseHelper helper

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste aller Domains</h1>
<table class="table accept-users">
    <thead>
        <tr>
            <td>Name</td>
            <td style="width: 15%;"></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var domains in Model)
            {
                <tr>
                    <td>@domains.AllowedDomains</td>
                    <td>
                        @Html.ActionLink("Löschen", "DomainLoeschen", new { id = domains.Id })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="create-beruf">
  @using (Html.BeginForm("SafeDomain", "Admin"))
  {
      <h1>Domain hinzufügen</h1>
      <label class="form-login-label" name="name">Name</label>
      <input class="form-login" type="text" name="name" id="name" />
      <input class="login-submit" type="submit" name="submit" value="Speichern" />
  }
</div>
